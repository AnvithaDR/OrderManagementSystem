			"name": "GET Products API",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"Products list is not empty\", function () {\r",
							"    const responseData = pm.response.json();\r",
							"    pm.expect(responseData.length).to.be.above(0);\r",
							"});\r",
							"pm.test(\"All products are ACTIVE\", function () {\r",
							"    const products = pm.response.json();\r",
							"\r",
							"    products.forEach(product => {\r",
							"        pm.expect(product.status).to.eql(\"ACTIVE\");\r",
							"    });\r",
							"});\r",
							"\r",
